<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://documentDetailView.title"
      focusComponent="form">
    <data>
        <instance id="documentDc"
                  class="com.company.onboarding.entity.Document">
            <fetchPlan extends="_base">
                <property name="user" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout expand="hbox">
        <hbox id="hbox" width="100%">
            <formLayout id="form" dataContainer="documentDc" width="500px">
                <textField id="nameField" property="name"/>
                <entityPicker id="userField" property="user" >
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <fileStorageUploadField id="fileField"
                                        property="file"
                                        fileNameVisible="true"/>
                <fileStorageUploadField id="signedFileField"
                                        property="signedFile"
                                        fileNameVisible="true"/>
                <select id="statusField" property="status"/>
                <checkbox id="dateSignedField" property="dateSigned" readOnly="true"/>
            </formLayout>
            <iframe id="documentFrame" width="100%"/>
        </hbox>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
